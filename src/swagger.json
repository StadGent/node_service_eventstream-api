    "/{institution}/{adlibdatabase}": {
      "get": {
        "parameters": [
          {
            "in": "path",
            "name": "institution",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Institution from which you want to retrieve data",
            "examples": {
              "Design Museum Gent": {
                "value": "dmg"
              },
              "STAM": {
                "value": "stam"
              },
              "Huis van Alijn": {
                "value": "hva"
              },
              "Industriemuseum": {
